<div class="card">
    <div class="table-responsive pt-3">
        <table class="table table-striped project-orders-table">
            <thead>
                <tr>
                    <th>Order No</th>
                    <th>Order Date</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() == 0)
                {
                    <tr>
                        <td colspan="5">
                            <p class="py-2 px-3 bg-dark text-light">No Deliveries available for you.</p>
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.OrderId</td>
                            <td>@item.OrderDate</td>
                            <td>@item.CustomerEmail</td>
                            <td>@item.CustomerPhone</td>
                            <td><p class="badge badge-success">@item.Status</p></td>
                            <td>
                                @if (!item.isArriving)
                                {
                                    <a class="btn btn-secondary" href="@Url.Action("OrderPickup", "Driver", new { id=item.OrderId})">Pickup Order</a>
                                }
                                @if (item.isArriving && !item.isDelivered)
                                {
                                    <a class="btn btn-success" href="@Url.Action("DeliverOrder", "Driver", new { id=item.OrderId})">Deliver Order</a>
                                }

                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>