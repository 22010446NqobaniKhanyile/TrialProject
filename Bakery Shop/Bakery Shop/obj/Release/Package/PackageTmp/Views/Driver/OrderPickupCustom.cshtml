@model Bakery_Shop.Models.CustomOrder
@{
    ViewBag.Title = "OrderPickupCustom";
    Layout = "~/Views/Shared/_Manager.cshtml";
}
<h4>Order Pickup</h4>
<hr />
<p>Order <b>@Model.CustomOrderID</b> has been picked up & is on route.</p>
<hr />
<p class="px-2 py-3 bg-dark text-light mb-3">Order Details</p>
<div class="my-3">
    <p>Client Email : @Model.Email</p>
    <p>Client Email : @Model.Phone</p>
    <p>Shipping Address : @Model.Address</p>
</div>
<a href="@Url.Action("Startcustomdelivery", "Driver", new { ordid=Model.CustomOrderID})" class="btn btn-success">Start delivery</a>


