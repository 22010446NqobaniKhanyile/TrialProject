@model Bakery_Shop.Models.Product
@{
    ViewBag.Title = "EditProduct";
    Layout = "~/Views/Shared/_Manager.cshtml";
}

<h4>Edit Product</h4>

<div class="row">
    <div class="col-md-6">
        @using (Html.BeginForm("EditProduct", "Bakery", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                <div class="mb-3">
                    <label for="exampleFormControlInput1" class="form-label">Product Name</label>
                    <input name="ProductName" required type="text" class="form-control" id="exampleFormControlInput1" placeholder="Cup Cake">
                </div>
            </div>
            <div class="form-group">
                <div class="mb-3">
                    <label for="exampleFormControlInput1" class="form-label">Product Price</label>
                    @*<input name="ProductPrice" required type="" min="1" max="999" class="form-control" id="exampleFormControlInput1" placeholder="R 120.00">*@
                    @Html.TextBoxFor(model => model.ProductPrice, new { @class = "form-control", @placeholder = "R120", @id = "exampleFormControlInput1" })
                </div>
            </div>
            <div class="form-group">
                <label for="exampleFormControlInput1" class="form-label">Category</label>
                @Html.DropDownList("Category", new SelectList(ViewBag.Category, "CategoryName", "CategoryName"), new { @class = "form-control select" })
            </div>
            <div class="form-group">
                <div class="mb-3">
                    <label for="ImageFile" class="form-label">Image</label>
                    <input class="form-control" required name="ImageFile" type="file" id="ImageFile">
                </div>
            </div>
            <div class="form-group">
                <button class="btn btn-success">Save Product</button>
            </div>
        }
    </div>
</div>

