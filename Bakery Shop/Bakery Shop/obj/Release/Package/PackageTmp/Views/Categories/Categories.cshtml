@model IEnumerable<Bakery_Shop.Models.Category>
@{
    ViewBag.Title = "Categories";
    Layout = "~/Views/Shared/_Manager.cshtml";
}

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.css">

<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.js"></script>
<link href="~/Content/dataTables.bootstrap5.min.css" rel="stylesheet" />
<div>

    <div class="d-flex justify-content-between align-items-center py-3 mb-2 px-4 bg-light" style="border-bottom:3px solid black">
        <p class="m-0">Categories</p>
        <a href="@Url.Action("NewCategory", "Categories")" class="btn btn-primary">
            <i class="fa fa-plus"></i>
            New Category
        </a>
    </div>
    <table id="table_id" class="display">
        <thead>
            <tr>
                <th>Id</th>
                <th>Category Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CategoryId</td>
                    <td>@item.CategoryName</td>
                    <td>
                        <a href="@Url.Action("Edit", "Categories", new { id = item.CategoryId})" class="btn btn-primary">
                            <i class="fa fa-pen"></i>
                        </a>
                        <a href="@Url.Action("Delete", "Categories", new { id = item.CategoryId})" class="btn btn-danger">
                            <i class="fa fa-times"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script>
    $(document).ready(function () {
        $('#table_id').DataTable();
    });
</script>