@model Bakery_Shop.Models.Order
@{
    ViewBag.Title = "OrderDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="mt-3 mb-3">
    <h4>Order # <b>@Model.OrderId</b> Details.</h4>
</div>
@if (ViewBag.Count == 0)
{
    <p>You have no orders at a moment.</p>
}
else
{
    <table class="table table-bordered">
        <tr>
            <th>Name</th>
            <th>Quantity</th>
            <th>Price</th>
        </tr>
        @foreach (var item in Model.OrderDetails)
        {
            <tr>
                <td>@item.Product.ProductName</td>
                <td>@item.Quantity</td>
                <td><span>R</span>@item.ProductPrice</td>
            </tr>
        }
    </table>
    <hr />
    <div class="d-flex justify-content-between align-items-center" style="margin-right: 40px">

        <p class="m-0">Order Total</p>
        <h4 class="m-0"><b>R @Model.Total</b></h4>
    </div>
}

