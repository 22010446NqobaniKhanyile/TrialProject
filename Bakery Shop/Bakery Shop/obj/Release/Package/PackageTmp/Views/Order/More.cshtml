@{
    ViewBag.Title = "More";
    Layout = "~/Views/Shared/_Manager.cshtml";
}

<h4>More Details About Order</h4>
<p>Order #<b>@Model.CustomOrderID</b></p>
<p>Placed On <b>@Model.OrderDate</b></p>
<p class="my-3 px-3 py-2 bg-dark text-light">Cake Details</p>

<div class="my-3">
    <p>Cake Sketch.</p>
    <img src="/@Model.SketchImage" width="70" alt="Alternate Text" />
</div>

