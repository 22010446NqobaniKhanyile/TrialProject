
@{
    ViewBag.Title = "CustomizeOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <hr />
    <h4>Customize Your Cake</h4>
    <p>Royal Bakery Shop allow their customers to customize the taste of their cakes.</p>
    <hr />
    @using (Html.BeginForm("PlaceCustomOrder", "Order", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="row">
            <div class="col-7">
                <div class="row">
                    <div class="col-8">
                        <label>Choose Cake type</label>
                        <select name="CakeType" class="form-select">
                            <option value=""> -- Select -- </option>
                            <option value="Birthday">Birthday</option>
                            <option value="Wedding">Wedding</option>
                            <option value="Graduation">Graduation</option>
                            <option value="Valentines">Valentines</option>
                        </select>
                    </div>
                    <div class="col-4">
                        <img src="~/Content/Custom Cake/caketype.png" width="60" alt="Alternate Text" />
                    </div>
                </div>
                <!--Row 2-->
                <div class="row mt-3">
                    <div class="col-8">
                        <label>Choose Cake filling</label>
                        <select name="Filling" class="form-select">
                            <option value=""> -- Select -- </option>
                            <option value="Chocolate">Chocolate</option>
                            <option value="Vanilla">Vanilla</option>
                            <option value="Cream Cheese">Cream Cheese</option>
                        </select>
                    </div>
                    <div class="col-4">
                        <img src="~/Content/Custom Cake/filling.png" width="60" alt="Alternate Text" />
                    </div>
                </div>
                <!--Row 3-->
                <div class="row mt-3">
                    <div class="col-8">
                        <label>Choose Cake Icing</label>
                        <select name="Icing" class="form-select">
                            <option value=""> -- Select -- </option>
                            <option value="Buttercream">Buttercream</option>
                            <option value="Cream Cheese">Cream Cheese</option>
                            <option value="Vanilla">Vanilla</option>
                        </select>
                    </div>
                    <div class="col-4">
                        <img src="~/Content/Custom Cake/Icing.png" width="60" alt="Alternate Text" />
                    </div>
                </div>
            </div>
            <!--Right Column-->
            <div class="col-5">
                <div class="form-group">
                    <div class="row mt-3">
                        <div class="col-10">
                            <label>Choose Cake Flavour</label>
                            <select name="Flavour" class="form-select">
                                <option value=""> -- Select -- </option>
                                <option value="Lemon">Lemon</option>
                                <option value="Strawberry">Strawberry</option>
                                <option value="Chocolate">Chocolate</option>
                                <option value="Orange">Orange</option>
                            </select>
                        </div>
                        <div class="col-2 d-flex align-items-center">
                            <img src="~/Content/Custom Cake/Flavour.png" width="60" alt="Alternate Text" />
                        </div>
                    </div>
                </div>
                <div class="form-group mt-3">
                    <label>Number Of Servings</label>
                    <input type="number" name="numberOfServings" class="form-control" />
                </div>
                <div class="form-group mt-3">
                    <label>Upload Cake Sketch</label>
                    <input type="file" name="ImageFile" class="form-control" />
                </div>
            </div>
        </div>
        <p class="bg-dark text-white py-2 px-4 my-3">Client Details</p>
        <div class="row">
            <div class="col-6">
                <div class="form-group">
                    <label>First Name</label>
                    <input type="text" name="FirstName" class="form-control" placeholder="First Name" />
                </div>
            </div>
            <div class="col-6">
                <div class="form-group">
                    <label>Last Name</label>
                    <input type="text" name="LastName" class="form-control" placeholder="Last Name" />
                </div>
            </div>
        </div>
        <!--Row 2-->
        <div class="row mt-4">
            <div class="col-6">
                <div class="form-group">
                    <label>Email</label>
                    <input type="hidden" name="LoggedEmail" value="@User.Identity.Name" />
                    <input type="email" disabled name="Email" value="@User.Identity.Name" class="form-control" placeholder="Email Address" />
                </div>
            </div>
            <div class="col-6">
                <div class="form-group">
                    <label>Phone</label>
                    <input type="tel" name="Phone" class="form-control" placeholder="Phone" />
                </div>
            </div>
        </div>
        <!--Row 3-->
        <div class="row mt-4">
            <div class="col-6">
                <div class="form-group">
                    <label>Address</label>
                    <input type="text" name="Address" class="form-control" placeholder="Address" />
                </div>
            </div>
            <div class="col-6">
                <div class="form-group">
                    <label>ZIP</label>
                    <input type="tel" name="Zip" class="form-control" placeholder="Zip Code" />
                </div>
            </div>
        </div>
        <hr />
        <button class="btn btn-dark" type="submit">Place Your Order</button>
    }
</div>
