@{
    Layout = null;
    ViewBag.Title = "Order Access";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Royal Bakery Shop - @ViewBag.Title</title>
    <link href="~/Content/template/css/order.css" rel="stylesheet" />

    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:wght@300;400;700&display=swap"
          rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css"
          rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-dark">
    <div class="track-order-access-container d-flex justify-content-center flex-column align-items-center">
        <h5 class="my-3 text-light">Track & Trace Your Order...</h5>
        <div class="p-4 bg-light rounded-2">
            @using (Html.BeginForm("OrderTrackingProgress", "Order", FormMethod.Post, new { @class = "TrackForm" }))
            {
                <p class="m-0 mb-2 text-center text-danger">@ViewBag.Error</p>
                <div class="form-group">
                    <label for="TrackingNo" class="form-label">Tracking Number</label>
                    <input type="text" name="TrackingNumber" class="form-control" placeholder="47894837290" id="TrackingNumber" />
                </div>
                <div class="form-group pt-2">
                    <button id="TrackBtn" class="btn btn-success" type="submit">Track Order</button>
                </div>
            }
        </div>
        <div class="pt-3">
            <p>Back To <a class="text-light" href="@Url.Action("Index", "Home")">Home</a></p>
        </div>
        <div class=" justify-content-center py-4 flex-column align-items-center" id="loader">
            <div class="spinner-border" role="status">
                <span class="sr-only">Loading...</span>
            </div>
            <p class="m-0 mt-3">Searching for your Order.. <span id="TrackNo"></span></p>
        </div>
    </div>
    <style>
        #loader {
            display: none;
        }
    </style>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.1/jquery.min.js" integrity="sha512-aVKKRRi/Q/YV+4mjoKBsE4x3H+BkegoM/em46NNlCqNTmUYADjBbeNefNxYV7giUp0VxICtqdrbqU7iVaeZNXA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(document).ready(function () {
            $("#TrackBtn").click(function () {
                $("#loader").css("display", "flex")
            })
        }
    </script>
</body>
</html>

