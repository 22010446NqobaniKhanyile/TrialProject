<div class="card">
    <div class="table-responsive pt-3">
        <table class="table table-striped project-orders-table">
            <thead>
                <tr>
                    <th>Order No</th>
                    <th>Order Date</th>
                    <th>Address</th>
                    <th>Amount Due</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() == 0)
                {
                    <tr>
                        <td colspan="5">
                            <p>There are <b>0</b> order(s) at a moment.</p>
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.OrderId</td>
                            <td>@item.OrderDate</td>
                            <td>@item.Address</td>
                            <td><span>R </span>@item.Total</td>
                            <td>
                                <a href="@Url.Action("OrderDetails", "Order", new { id=item.OrderId})" class="btn btn-dark">Details</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
