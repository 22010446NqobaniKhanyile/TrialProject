@model Bakery_Shop.Models.Decobooking

@{
    ViewBag.Title = "Processorder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Process order</h1>


<div class="col">
    <div class="row">

        <div class="col-sm-5">
            <label>User email</label>
            <h3>@Model.Useremail</h3>
        </div>
        <div class="col-sm-5">
            <label>Booking date</label>
            <h4>@Model.Bookingdate</h4>
        </div>
        <div class="col-sm-2">
            <img src="/images/uploads/decos/@Model.Packageid/@ViewBag.Pacimg" style="height:100%;width:100%" />

        </div>

    </div>

    <div class="row">

        <div class="col-sm-5">
            <label>Booking fee</label>
            <h4>R @Model.Bookingfee</h4>
        </div>
        <div class="col-sm-5">
            <label>Number of guests</label>
            <h4>@Model.Numberofguest</h4>
        </div>
        <div class="col-sm-5">
            <label>Address</label>
            <h4>@Model.Address</h4>
        </div>
        <div class="col-sm-5">
            <label>Status</label>
            <h4>@Model.Status</h4>
        </div>
    </div>

    <div class="row">


    </div>

    <br />

    <div align="center">

        <style>
            input[type=radio] {
                border: 0px;
                width: 100%;
                height: 2em;
            }
        </style>
        <form action="/deco/orderprocessed">
            <input type="hidden" name="oid" value="@Model.Id" />
            <label>All order items are available</label>
            <input type="radio" style="height:50px" required />
            <input type="submit" value="Order processed" class="btn btn-success" />
        </form>

    </div>
    <br />
    <h2>
        Booking items

    </h2>
    <br />


    @Html.Action("Orderpieces", "Deco")





</div>

