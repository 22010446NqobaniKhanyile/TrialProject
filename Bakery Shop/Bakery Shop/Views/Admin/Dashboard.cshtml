
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Manager.cshtml";

}

<h2 class="light-text">Dashboard</h2>
<div class="row">
    <div class="col-md-4">
        <div class="card bg-primary text-white">
            <div class="card-header">
                Users
            </div>
            <div class="card-body d-flex flex-column align-items-center">
                <h5 class="card-title">There are <span class="card-count text-danger">2</span> Registered Users</h5>
                <div class="card-icon">
                    <i class="fa fa-users"></i>
                </div>
                <a href="#" class="btn btn-light">View <i class="fa fa-long-arrow-right" aria-hidden="true"></i></a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-warning">
            <div class="card-header">
                Orders
            </div>
            <div class="card-body d-flex flex-column align-items-center">
                <h5 class="card-title">There are <span class="card-count text-success">2</span> Pending Orders</h5>
                <div class="card-icon">
                    <i class="fa fa-shopping-bag"></i>
                </div>
                <a href="#" class="btn btn-primary">View <i class="fa fa-long-arrow-right" aria-hidden="true"></i></a>
            </div>
        </div>
    </div>
