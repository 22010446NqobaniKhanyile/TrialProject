@model IEnumerable<Bakery_Shop.Models.Product>
@{
    ViewBag.Title = "Products";
    Layout = "~/Views/Shared/_Manager.cshtml";
}

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.css">

<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.js"></script>

<div>
    @*<div class="d-flex justify-content-between align-items-center py-3 mb-2 px-4 bg-light" style="border-bottom:3px solid black">
        <p class="m-0">Products</p>
        <a href="@Url.Action("NewProduct", "Bakery")" class="btn btn-primary">
            <i class="fa fa-plus"></i>
            New Product
        </a>
    </div>*@
    <table id="table_id" class="table table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Category</th>
                <th>Price</th>
                <th>Image</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.Category</td>
                    <td>@item.ProductPrice</td>
                    <td>
                        <img src="/@item.Image" width="80" alt="Image" />
                    </td>
                    <td>
                        <a href="@Url.Action("EditProduct", "Bakery", new { id = item.ProductId})" class="btn btn-primary">
                            <i class="typcn typcn-pen"></i> Edit
                        </a>
                        <a href="@Url.Action("DeleteProduct", "Bakery", new { id = item.ProductId})" class="btn btn-danger">
                            <i class="typcn typcn-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>

<script>
    $(document).ready(function () {
        $('#table_id').DataTable();
    });
</script>